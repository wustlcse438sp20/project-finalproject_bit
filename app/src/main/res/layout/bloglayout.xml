<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:background="#cfcfcf">

        <TextView
            android:id="@+id/favorite_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            android:gravity="center_vertical"
            android:text="0"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/baseline_favorite_border_white_18dp" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_toEndOf="@+id/favorite_number"
            android:layout_toRightOf="@+id/favorite_number"
            android:text="TextView"
            android:textSize="35dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="38dp"
            android:layout_marginLeft="38dp"
            android:layout_toEndOf="@+id/title"
            android:layout_toRightOf="@+id/title" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/avatar"
            android:layout_toRightOf="@+id/avatar"
            android:text="Username"
            android:textSize="20dp" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@+id/title"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_gravity="center"
        android:text="TextView"
        android:textSize="20dp"
        android:textStyle="normal"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="103dp"
            android:layout_toEndOf="@+id/address"
            android:layout_toRightOf="@+id/address"
            android:text="TextView"
            android:textStyle="italic"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="301dp"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textStyle="italic"
            android:textSize="12sp"/>

    </RelativeLayout>


    <FrameLayout
        android:id="@+id/comment_Fragment"
        android:layout_width="match_parent"
        android:layout_height="80dp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cfcfcf">

        <EditText
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="100dp"
            android:layout_toEndOf="@+id/comment_button"
            android:layout_toRightOf="@+id/comment_button"
            android:ems="10"
            android:hint="Input comment here"
            android:inputType="textPersonName"
            android:text="" />

        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="140dp"
            android:layout_toEndOf="@+id/addFriend_button"
            android:layout_toRightOf="@+id/addFriend_button"
            android:visibility="visible"
            app:srcCompat="@drawable/baseline_thumb_up_white_18dp"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/addFriend_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_perm_identity_white_18dp" />

        <ImageButton
            android:id="@+id/comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="220dp"
            android:layout_toEndOf="@+id/favorite_button"
            android:layout_toRightOf="@+id/favorite_button"
            app:srcCompat="@drawable/baseline_create_white_18dp" />

    </RelativeLayout>


</LinearLayout>