    android:maxWidth="240dp"
    android:layout_marginRight="10dp"
    android:text="TextViewwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww"
    android:textSize="18dp"
    app:layout_constraintRight_toLeftOf="@id/message_to_image"
